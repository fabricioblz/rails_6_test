
<%=  @file_path %>
<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<%= form_with(url: '/transform_voice', method: :post, local: true, multipart: true, class: 'form') do |form| %>
  <div class="form-group">
    <%= form.label :voice, class: 'form-label' %>
    <%= form.select :voice, options_for_select(@all_voices.map {|d| [d['name'], d['uuid']]}) %>
  </div>

  <div class="form-group">
    <%= form.label :audio_file, class: 'form-label' %>
    <%= form.file_field :audio_file, class: 'form-input' %>
  </div>

  <%= form.submit 'Process', class: 'btn btn-primary' %>
    <% if notice %>
    <%= link_to 'Download Transformed Audio', params[:file_path], class: 'btn btn-primary' %>
    <% end %>
<% end %>
